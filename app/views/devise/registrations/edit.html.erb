<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, input_html: {style:"width:50%; margin:auto"}, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, input_html: {style:"width:50%; margin:auto"}, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
    <%= f.input :password_confirmation, input_html: {style:"width:50%; margin:auto"}, required: false %>
    <%= f.input :current_password, input_html: {style:"width:50%; margin:auto"}, hint: "we need your current password to confirm your changes", required: true %>
		<%= f.input :name, input_html: {style:"width:50%; margin:auto"}, required: true, autofocus: true %>
    <%= f.input :age, collection: ["10대","20대","30대","40대","50대"], input_html: {class:"btn btn-default dropdown-toggle", style:"width:10%; margin:auto"}, required: true%>
    <%= f.input :gender, as: :radio_buttons, required: true, collection: ["여자", "남자"], input_html: {style:"width:10%; margin:auto"}, autofocus: true %>

	</div>

  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
